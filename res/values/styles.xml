<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SampleTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/SampleActionBar</item>
        <item name="android:actionBarStyle">@style/SampleActionBar</item>
    </style>

    <!-- style for actionbar -->
    <style name="SampleActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_background</item>
        <item name="android:background">@color/actionbar_background</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="windowActionBarOverlay">false</item> <!-- for ActionBarSherlock -->
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>